{
  "name": "transitlog-server",
  "version": "1.0.0",
  "description": "Server component for Transitlog and Bultti.",
  "main": "src/server.ts",
  "scripts": {
    "docker:build": "docker build --cpuset-cpus 2 -t hsldevcom/transitlog-server .",
    "docker:run": "docker run --name transitlog-server -p 4000:4000 hsldevcom/transitlog-server",
    "start": "NODE_ICU_DATA=\"$(pwd)/node_modules/full-icu\" ts-node-dev --no-notify --respawn -r dotenv/config src/server.ts",
    "start:production": "NODE_ICU_DATA=\"$(pwd)/node_modules/full-icu\" forever start -c \"ts-node -T -r dotenv/config\" src/server.ts -l server.log -o server-out.log -e server-err.log && forever -f logs 0",
    "codegen": "gql-gen --config codegen.yml",
    "codestyle": "prettier \"src/**/*.{ts,js,json}\" --write",
    "test": "node scripts/test.js",
    "test:ci": "CI=true node scripts/test.js",
    "test:staged": "CI=true node scripts/test.js --bail --findRelatedTests"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "tslint --fix",
      "prettier --write",
      "npm run test:staged --",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "HSLdevcom",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/graphql": "^14.0.7",
    "@types/ioredis": "^4.0.9",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.122",
    "@types/node": "^11.11.0",
    "apollo-datasource": "^0.3.1",
    "apollo-link": "^1.2.9",
    "apollo-link-context": "^1.0.15",
    "apollo-link-error": "^1.1.8",
    "apollo-link-http": "^1.5.12",
    "apollo-server": "^2.4.8",
    "apollo-server-caching": "^0.3.1",
    "apollo-server-errors": "^2.2.1",
    "await-to-js": "^2.1.1",
    "boundingbox": "^1.1.0",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "forever": "^0.15.3",
    "full-icu": "^1.2.1",
    "graphql": "^14.1.1",
    "graphql-code-generator": "^0.18.0",
    "ioredis": "^4.6.2",
    "isomorphic-fetch": "^2.2.1",
    "knex": "^0.16.3",
    "knex-postgis": "^0.7.0",
    "knex-tiny-logger": "^1.1.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "pg": "^7.9.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "concurrently": "^4.1.0",
    "graphql-codegen-fragment-matcher": "^0.18.0",
    "graphql-codegen-introspection": "^0.18.0",
    "graphql-codegen-typescript-common": "0.18.0",
    "graphql-codegen-typescript-resolvers": "0.18.0",
    "graphql-codegen-typescript-server": "0.18.0",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "jest-haste-map": "^24.5.0",
    "jest-resolve": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1"
  }
}
