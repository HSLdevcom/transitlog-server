{
  "name": "transitlog-server",
  "version": "1.0.0",
  "description": "Server component for Transitlog and Bultti.",
  "main": "src/server.ts",
  "scripts": {
    "docker:build": "docker build --cpuset-cpus 2 -t hsldevcom/transitlog-server .",
    "docker:run": "docker run --name transitlog-server -p 1234:1234 hsldevcom/transitlog-server",
    "start": "concurrently \"yarn:start:dev\" \"sleep 2 && yarn run codegen --watch\"",
    "start:dev": "NODE_ICU_DATA=\"$(pwd)/node_modules/full-icu\" nodemon --signal SIGTERM --watch 'src/**/*' -r ts-node/register -r dotenv/config src/server.ts",
    "start:production": "NODE_ICU_DATA=\"$(pwd)/node_modules/full-icu\" forever start -c \"node -r ts-node/register -r dotenv/config\" src/server.ts -l server.log -o server-out.log -e server-err.log && forever -f logs 0",
    "codegen": "gql-gen --config codegen.yml",
    "codestyle": "prettier \"src/**/*.{ts,js,json}\" --write",
    "test": "node scripts/test.js",
    "test:ci": "CI=true node scripts/test.js",
    "test:staged": "CI=true node scripts/test.js --bail --findRelatedTests"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "tslint --fix",
      "prettier --write",
      "npm run test:staged --",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "HSLdevcom",
  "license": "MIT",
  "dependencies": {
    "@types/graphql": "^14.0.7",
    "@types/ioredis": "^4.0.8",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.4",
    "apollo-datasource": "^0.3.1",
    "apollo-link": "^1.2.8",
    "apollo-link-context": "^1.0.14",
    "apollo-link-error": "^1.1.7",
    "apollo-link-http": "^1.5.11",
    "apollo-server": "^2.4.2",
    "apollo-server-errors": "^2.2.1",
    "await-to-js": "^2.1.1",
    "boundingbox": "^1.0.0",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "forever": "^0.15.3",
    "full-icu": "^1.2.1",
    "graphql": "^14.1.1",
    "graphql-code-generator": "^0.17.0",
    "ioredis": "^4.6.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "concurrently": "^4.1.0",
    "graphql-codegen-fragment-matcher": "^0.17.0",
    "graphql-codegen-introspection": "^0.17.0",
    "graphql-codegen-typescript-common": "0.17.0",
    "graphql-codegen-typescript-resolvers": "0.17.0",
    "graphql-codegen-typescript-server": "0.17.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1"
  }
}
